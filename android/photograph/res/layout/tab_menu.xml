<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_menu"
    android:layout_width="fill_parent"
    android:layout_height="43.0dip"
    android:background="#ffccccff"
    android:gravity="center_vertical"
    android:padding="0.0dip"
    android:layout_marginBottom="-12.dip" >

    <Button
        android:id="@+id/go_back"
        style="@style/menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/tab_menu_selector"
        android:drawableTop="@drawable/menu_ic_goback"
        android:drawablePadding="-5.0dip" />

    <Button
        android:id="@+id/menu_search"
        style="@style/menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/tab_menu_selector"
        android:drawableTop="@drawable/menu_ic_category_search"
        android:drawablePadding="-5.0dip" />
    
    <Button
        android:id="@+id/menu_menu"
        style="@style/menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/tab_menu_selector"
        android:drawableTop="@drawable/menu_ic_setting"
        android:drawablePadding="-5.0dip" />

    <!--  -->

    <Button
        android:id="@+id/go_forward"
        style="@style/menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/tab_menu_selector"
        android:drawableTop="@drawable/menu_ic_goforward"
        android:drawablePadding="-5.0dip" />

</LinearLayout>